{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"@modules/*": ["./modules/*"],
			"@core/*": ["./core/*"],
			"@utils/*": ["./utils/*"],
			"types/*": ["./@types/*"],
			"@modules": ["./modules/"],
			"@core": ["./core/"],
			"@utils": ["./utils/"],
			"types": ["./@types"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
